<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hp.first.MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#006b54">

        <Button
            android:id="@+id/read_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Read Location"
             />

        <TextView
            android:id="@+id/get_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude and Longitude"
            android:visibility="gone"
           />

        <TextView
            android:id="@+id/get_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exact Location"
            android:layout_marginTop="80dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nxtButton"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="350dp"
            android:text="NEXT"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
